
<TelerikChart>
	<ChartSeriesItems>
		<ChartSeries Type="ChartSeriesType.Area"
					 Name="Exploited Duration"
					 Data="@Model.ExploitedDuration"
					 Field="@nameof(KeyValueModel.Value)"
					 CategoryField="@nameof(KeyValueModel.Key)"
					 Axis="hours"
					 MissingValues="ChartSeriesMissingValues.Gap">
		</ChartSeries>
		<ChartSeries Type="ChartSeriesType.Area"
					 Name="Total Duration"
					 Data="@Model.TotalDuration"
					 Field="@nameof(KeyValueModel.Value)"
					 CategoryField="@nameof(KeyValueModel.Key)"
					 Axis="hours"
					 MissingValues="ChartSeriesMissingValues.Gap">
		</ChartSeries>
		<ChartSeries Type="ChartSeriesType.Line"
					 Name="Tasks Performed"
					 Data="@Model.TasksPerformed"
					 Field="@nameof(KeyValueModel.Value)"
					 CategoryField="@nameof(KeyValueModel.Key)"
					 MissingValues="ChartSeriesMissingValues.Gap">
		</ChartSeries>
		<ChartSeries Type="ChartSeriesType.Line"
					 Name="Tasks Outstanding"
					 Data="@Model.TasksOutstanding"
					 Field="@nameof(KeyValueModel.Value)"
					 CategoryField="@nameof(KeyValueModel.Key)"
					 MissingValues="ChartSeriesMissingValues.Gap">
		</ChartSeries>
		<ChartSeries Type="ChartSeriesType.Line"
					 Name="Tasks Completed Per Period"
					 Data="@Model.TasksCompletedPerPeriod"
					 Field="@nameof(KeyValueModel.Value)"
					 CategoryField="@nameof(KeyValueModel.Key)"
					 MissingValues="ChartSeriesMissingValues.Gap">
		</ChartSeries>
		@*<ChartSeries Type="ChartSeriesType.Line"
					 Name="Completion"
					 Data="@Model.CompletionPercent"
					 Field="@nameof(KeyValueModel.Value)"
					 CategoryField="@nameof(KeyValueModel.Key)"
					 MissingValues="ChartSeriesMissingValues.Gap">
		</ChartSeries>
		<ChartSeries Type="ChartSeriesType.Line"
					 Name="Sessions"
					 Data="@Model.Sessions"
					 Field="@nameof(KeyValueModel.Value)"
					 CategoryField="@nameof(KeyValueModel.Key)"
					 MissingValues="ChartSeriesMissingValues.Gap">
		</ChartSeries>
		<ChartSeries Type="ChartSeriesType.Line"
					 Name="New Taggers"
					 Data="@Model.NewTaggers"
					 Field="@nameof(KeyValueModel.Value)"
					 CategoryField="@nameof(KeyValueModel.Key)"
					 MissingValues="ChartSeriesMissingValues.Gap">
		</ChartSeries>
		<ChartSeries Type="ChartSeriesType.Line"
					 Name="Exploitation Saturation"
					 Data="@Model.ExploitationSaturation"
					 Field="@nameof(KeyValueModel.Value)"
					 CategoryField="@nameof(KeyValueModel.Key)"
					 MissingValues="ChartSeriesMissingValues.Gap">
		</ChartSeries>*@
	</ChartSeriesItems>

	<ChartCategoryAxes>
		<ChartCategoryAxis Categories="@XAxisItems" StartAngle="90"></ChartCategoryAxis>
	</ChartCategoryAxes>

	<ChartValueAxes>
		<ChartValueAxis Color="green">
			<ChartValueAxisTitle Text="Tasks"></ChartValueAxisTitle>
		</ChartValueAxis>
		<ChartValueAxis Color="blue" Type="ChartValueAxisType.Numeric" Name="hours">
			<ChartValueAxisTitle Text="Hours"></ChartValueAxisTitle>
		</ChartValueAxis>
	</ChartValueAxes>

	<ChartLegend Position="ChartLegendPosition.Bottom">
	</ChartLegend>

</TelerikChart>


@code {

	[Parameter]
	public string Title { get; set; }

	[Parameter]
	public object[] XAxisItems { get; set; } = new object[0];

	[Parameter]
	public ContentProgressViewModel Model { get; set; } = new ContentProgressViewModel();
}
