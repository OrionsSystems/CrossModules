@page "/"
@namespace Orions.Systems.CrossModules.Portal.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using EmbeddedBlazorContent;

<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="utf-8" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   <title>Orions Systems Portal</title>
   <base href="~/" />

   <link rel="stylesheet" href="https://unpkg.com/@@progress/kendo-theme-default@@latest/dist/all.css" />

   <script src="EmbeddedBlazorFile/codemirror.js"></script>

   @Html.EmbeddedBlazorContent()

   <script src="https://kendo.cdn.telerik.com/blazor/2.1.1/telerik-blazor.min.js" defer></script>

   <link href="https://cdn.syncfusion.com/ej2/17.4.42/material.css" rel="stylesheet" />
   <script src="https://cdn.syncfusion.com/ej2/17.4.42/dist/ej2.min.js"></script>
   <script src="https://cdn.syncfusion.com/ej2/17.4.42/dist/ejs.interop.min.js"></script>

   <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
   <link rel="stylesheet" href="_content/ChartJs.Blazor/ChartJSBlazor.css" />

   <link href="css/site.css" rel="stylesheet" />
   <link href="css/menu.css" rel="stylesheet" />
</head>
<body>
    <app>
        @(await Html.RenderComponentAsync<App>(RenderMode.Server))
    </app>

    <script src="_framework/blazor.server.js"></script>

    <script src="_content/MatBlazor/dist/matBlazor.js"></script>

    <!-- Reference the included moment.js javascript file. -->
    <script src="_content/ChartJs.Blazor/moment-with-locales.min.js" type="text/javascript" language="javascript"></script>

    <!-- Reference the included ChartJs javascript file. -->
    <script src="_content/ChartJs.Blazor/Chart.min.js" type="text/javascript" language="javascript"></script>

    <!-- This is the glue between the C# code and the ChartJs charts -->
    <script src="_content/ChartJs.Blazor/ChartJsBlazorInterop.js" type="text/javascript" language="javascript"></script>

    <script src="_content/Microsoft.AspNetCore.ProtectedBrowserStorage/protectedBrowserStorage.js"></script>
</body>
</html>
