@namespace Orions.Systems.CrossModules.Components
@using Microsoft.JSInterop

@using MatBlazor

@inherits TagBase

<div class="tag-widget-container">
    <MatCard class="demo-mat-card">
        <MatCardContent Class="card-content">
            <MatCardMedia Wide="true" ImageUrl="@DataContext.ImageBase64Url">
                <div class="tag-controls">
                    <svg xmlns="http://www.w3.org/2000/svg" width="8" height="8" viewBox="0 0 8 8" class="play-button">
                        <path d="M0 0v6l6-3-6-3z" transform="translate(1 1)" />
                    </svg>
                </div>
                <div class="top-block">
                    @DataContext.HyperTagFragmentSliceLabel
                </div>
                <div class="label-block">
                    @DataContext.HyperTagLabel
                </div>
            </MatCardMedia>
        </MatCardContent>
    </MatCard>
</div>

<style>
    .tag-widget-container{
        width:100%;
        height:100%;
        overflow:hidden;
        color:white;
    }

    .tag-widget-container .mat-card-media{
        background-size:contain;
        background-color:black;
    }

    .tag-widget-container .bg-image{
        width:100%;
    }

    .tag-widget-container .top-block{
        margin:5px;
    }

    .tag-widget-container .label-block{
        position: absolute;
        bottom: 5px;
        right: 5px;
    }

    .tag-widget-container .tag-controls{
        width:100%; 
        height:100%;
        position:absolute;
        background-color: rgba(117, 190, 218, 0.35);

        text-align: center;
        padding-top: 50px;

        display: none;
    }

    .tag-widget-container:hover .tag-controls{
        display: block;
    }

    .tag-widget-container .tag-controls .play-button{
        width: 100px;
        height: 100px;
        fill: white;
    }

</style>
