@namespace Orions.Systems.CrossModules.Components
@using Orions.Infrastructure.HyperMedia

@inherits TagGridBase

<div class="fluid-container @Class">

    <div class="row">
        @foreach(var tag in HyperTags)
        {
            <div class="col-6 col-sm-4 col-xl-3 widget-container">
                <Tag Tag="@tag" HyperStore="@HyperStore"/>
            </div>
        }
    </div>
</div>

<style>
    .widget-container{
        margin-bottom:20px;

    }
    .widget-placeholder {
        height: 300px;
        background-color: blueviolet;
        border-radius: 4px;
    }
</style>