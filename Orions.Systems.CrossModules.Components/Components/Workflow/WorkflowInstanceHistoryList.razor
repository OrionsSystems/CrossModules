@namespace Orions.Systems.CrossModules.Components


@inherits WorkflowInstanceHistoryListBase

	<div class="workflow-container">

		@if (Vm.IsLoadedData)
		{
			@if (Vm.Items.Any())
			{
				var rowIndex = 0;

				<div class="row">
					<div class="col-lg-12 header-title">Workflow Configurations</div>
				</div>

				<div class="table-responsive list-table">

					<table class="table table-striped table-bordered table-hover">
						<thead>
							<tr>
								<th width="1%" class="nowrap center"></th>
								<th>Name</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Vm.Items)
							{
								rowIndex++;

								<tr>
									<td class="center nowrap">@rowIndex</td>
									<td>@Vm.GetInstanceLabel(item)</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			}
			else
			{
				<div class="no-data-container"><div class="no-data-text">There isn't any workflow history items</div></div>
			}
		}
		else
		{
			<Loader Settings="@LoaderSetting"></Loader>
		}

	</div>

